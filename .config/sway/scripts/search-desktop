#!/bin/bash
line=`ag --nobreak --nonumbers --noheading --nocolor "\[Desktop Entry\][^\[]+Name=.+" /usr/share/applications $HOME/.local/share/applications /var/lib/snapd/desktop/applications | grep "Name=" | sed -En "s/Name=//p" | /home/linuxbrew/.linuxbrew/bin/fzf --delimiter=":" --with-nth=2 --print-query`; if [ $(echo "$line" | wc -l) -eq 2 ]; then echo "$line" | sed -n 2p | cut -d":" -f1 | xargs -r -i swaymsg -t command exec "bash -c 'source ~/.profile && dex {}'"; exit 0; fi; echo -n "$line" | xargs -r -i swaymsg -t command exec "bash -c 'source ~/.profile && {}'";
